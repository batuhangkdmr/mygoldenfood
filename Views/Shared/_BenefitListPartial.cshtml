@model IEnumerable<MyGoldenFood.Models.Benefit>

<table class="table table-bordered">
    <thead>
        <tr>
            <th>Ürün Adı</th>
            <th>Faydaları</th>
            <th>Resim</th>
            <th>İşlemler</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var benefit in Model)
        {
            <tr>
                <td>@benefit.Name</td>
                <td>@benefit.Content</td>
                <td>
                    @if (!string.IsNullOrEmpty(benefit.ImagePath))
                    {
                        <img src="@benefit.ImagePath" alt="Fayda Resmi" style="max-width: 100px; max-height: 100px;" />
                    }
                    else
                    {
                        <span>Resim Yok</span>
                    }
                </td>
                <td>
                    <button class="btn btn-warning" onclick="loadEditBenefitForm(@benefit.Id)">Düzenle</button>
                    <button class="btn btn-danger" onclick="deleteBenefit(@benefit.Id)">Sil</button>
                </td>
            </tr>
        }
    </tbody>
</table>
