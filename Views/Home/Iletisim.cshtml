@using Microsoft.Extensions.Localization
@inject IStringLocalizer<SharedResource> localizer

@{
    ViewData["Title"] = "İletişim | My Golden Food - Dondurulmuş Gıda Ürünleri";
    Layout = "_Layout";
}

<!-- SEO Meta Etiketleri -->
<head>
    <meta name="description" content="My Golden Food ile iletişime geçin. Dondurulmuş gıda sektöründe kaliteli ürünlerimiz hakkında bilgi alın veya bizimle iletişime geçerek işbirliği fırsatlarını değerlendirin.">
    <meta name="keywords" content="My Golden Food iletişim, dondurulmuş gıda iletişim, gıda üreticisi iletişim">
    <meta name="author" content="My Golden Food">
    <link rel="canonical" href="https://mygoldenfood.com/Home/Iletisim" />
</head>
<style>
    /* Arka plan resmi */
    body {
        background: url('https://res.cloudinary.com/dbhogeepn/image/upload/v1738687870/moon31-min_lq11rc.jpg') no-repeat center center fixed;
        background-size: cover;
    }

    /* Genel konteyner */
    .contact-container {
        display: flex;
        justify-content: center;
        align-items: center;
        height: 90vh;
    }

    /* Şeffaf kutu */
    .contact-box {
        display: flex;
        background: rgba(255, 255, 255, 0.2); /* Şeffaf beyaz */
        padding: 20px;
        border-radius: 10px;
        backdrop-filter: blur(10px); /* Arka planı bulanıklaştırır */
    }

    /* Form ve iletişim bilgileri */
    .contact-form, .contact-info {
        padding: 20px;
        border-radius: 10px;
        width: 100%;
    }

        /* Form alanı */
        .contact-form h3, .contact-info h3 {
            color: white;
            text-align: center;
        }

        .contact-form input, .contact-form textarea {
            width: 100%;
            padding: 10px;
            margin: 10px 0;
            border: none;
            border-radius: 5px;
        }

        /* Buton */
        .contact-form button {
            width: 100%;
            padding: 10px;
            background: black;
            color: white;
            border: none;
            cursor: pointer;
            border-radius: 5px;
            transition: 0.3s;
        }

            .contact-form button:hover {
                background: black;
            }

    /* İletişim bilgileri */
    .contact-info {
        background: rgba(0, 0, 0, 0.5); /* Şeffaf siyah */
        color: white;
    }

        .contact-info p {
            display: flex;
            align-items: center;
            font-size: 14px;
        }

        .contact-info i {
            margin-right: 10px;
        }
    /* 📱 Mobil Uyumlu Görünüm */
    @@media (max-width: 768px) {
        .contact-container {
            flex-direction: column;
            align-items: center;
            height: 110%;
            padding: 20px;
            margin-top: 15px;
        }

        .contact-box {
            flex-direction: column;
            padding: 15px;
        }

        .contact-form, .contact-info {
            width: 100%;
            padding: 10px;
        }

            .contact-form input, .contact-form textarea {
                padding: 8px;
                font-size: 14px;
            }

            .contact-form h3, .contact-info h3 {
                font-size: 1.5rem;
            }

            .contact-form button {
                padding: 10px;
                font-size: 1rem;
            }

            .contact-info p {
                font-size: 13px;
            }
    }

</style>
<!-- Schema Markup (Google SEO için) -->
<script type="application/ld+json">
    {
        "@@context": "https://schema.org",
        "@@type": "LocalBusiness",
        "name": "My Golden Food",
        "url": "https://mygoldenfood.com",
        "logo": "https://res.cloudinary.com/dbhogeepn/image/upload/v1738688048/logo-moonlife1_ulf0n3.png",
        "description": "My Golden Food, dondurulmuş gıda sektöründe lider bir markadır. Kaliteli ve sağlıklı dondurulmuş gıda ürünleri sunmaktadır.",
        "address": {
            "@@type": "PostalAddress",
            "addressLocality": "Ankara, Türkiye"
        },
        "contactPoint": {
            "@@type": "ContactPoint",
            "telephone": "+90 533 635 24 58",
            "contactType": "customer service"
        }
    }
</script>

@if (!string.IsNullOrEmpty(ViewBag.Uyari))
{
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <script>
        document.addEventListener("DOMContentLoaded", function () {
            Swal.fire({
                title: "@(ViewBag.Uyari.Contains("başarıyla") ? "Başarılı" : "Hata")",
                text: decodeURIComponent("@Uri.EscapeDataString(ViewBag.Uyari)"),
                icon: "@(ViewBag.Uyari.Contains("başarıyla") ? "success" : "error")",
                showConfirmButton: false,
                timer: 2000 // 2 saniye sonra otomatik kapanacak
            });

        @if (ViewBag.Uyari.Contains("başarıyla"))
        {
            <text>
                        setTimeout(function () {
                            window.location.href = "/Home/Iletisim"; // 2 saniye sonra yönlendir
                        }, 2000);
            </text>
        }
        });
    </script>
}

<!-- İletişim Formu -->
<div class="contact-container mt-5">
    <div class="contact-box">
        <!-- Şeffaf Form -->
        <div class="contact-form">
            <h1>@localizer["Iletisim_Bizimle İletişime Geçin"]</h1> <!-- SEO İçin H1 Güncellendi -->
            <form method="post" action="/Home/Iletisim">
                <div class="row">
                    <div class="col-md-6">
                        <input type="text" name="adsoyad" placeholder="@localizer["Iletisim_Adınız Soyadınız"]" aria-label="Adınız Soyadınız" required>
                    </div>
                    <div class="col-md-6">
                        <input type="email" name="email" placeholder="@localizer["Iletisim_E-Posta Adresiniz"]" aria-label="E-Posta Adresiniz" required>
                    </div>
                </div>
                <input type="text" name="konu" placeholder="@localizer["Iletisim_Konu"]" aria-label="@localizer["Iletisim_Konu"]" required>
                <textarea name="mesaj" placeholder="@localizer["Iletisim_Mesajınız"]" rows="5" aria-label="Mesajınız" required></textarea>
                <button type="submit">@localizer["Iletisim_Gönder"]</button>
            </form>
        </div>

        <!-- Şeffaf İletişim Bilgileri -->
        <div class="contact-info">
            <h2>@localizer["Iletisim_İletişim Bilgilerimiz"]</h2> <!-- SEO İçin H2 Kullanıldı -->
            <p><i class="fas fa-map-marker-alt"></i> <strong> @localizer["Iletisim_Adres:"]</strong> MY GOLDEN FOOD GIDA SAN.TİC A.Ş. Türkiye/Ankara</p>
            <p><i class="fas fa-phone"></i> <strong> @localizer["Iletisim_Telefon:"]</strong>  <a href="tel:+905336352458" class="text-white">+90 533 635 24 58</a></p>
            <p><i class="fas fa-envelope"></i> <strong> @localizer["Iletisim_Email:"]</strong>  <a href="mailto:gokhangokdemir@mygoldenfood.com" class="text-white">gokhangokdemir@mygoldenfood.com</a></p>
        </div>
    </div>
</div>
