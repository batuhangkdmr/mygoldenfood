@{
    ViewData["Title"] = "Tarif Kategorileri";
    Layout = "_Layout";
}

<div class="container mt-5">
    <h1 class="text-center text-white mb-4">Tarif Kategorileri</h1>
    <div class="row">
        @foreach (var category in Model)
        {
            <div class="col-md-4 text-center mb-4">
                <a href="/Tarifler/Details/@category.Id" class="text-decoration-none text-white">
                    <div class="category-card">
                        <div class="image-container">
                            <img src="@category.ImagePath" alt="@category.Name" class="category-image" />
                        </div>
                        <h3 class="mt-3">@category.Name</h3>
                    </div>
                </a>
            </div>
        }
    </div>
</div>

<style>
    /* Görsel kapsayıcı */
    .image-container {
        width: 100%;
        height: 250px; /* Sabit yükseklik */
        overflow: hidden; /* Taşan kısımları gizler */
        border-radius: 10px; /* Köşe yuvarlama */
        background-color: #000; /* Siyah arka plan */
        display: flex;
        justify-content: center;
        align-items: center;
    }

    /* Görsel düzenleme */
    .category-image {
        max-width: 100%; /* Görsel çerçevenin genişliğini geçmez */
        max-height: 100%; /* Görsel çerçevenin yüksekliğini geçmez */
        object-fit: contain; /* Görseller çerçeveye sığar, orijinal boyut korunur */
        object-position: center; /* Ortalar */
    }

    /* Kart düzeni */
    .category-card {
        transition: transform 0.3s ease, box-shadow 0.3s ease;
        padding: 10px;
        background-color: #121928; /* Hafif şeffaf arka plan */
        border-radius: 10px;
    }

        .category-card:hover {
            transform: translateY(-5px); /* Hafif yükselme efekti */
            box-shadow: 0 8px 20px rgba(255, 255, 255, 0.2); /* Daha belirgin gölge efekti */
        }

    /* Hover sırasında görsel büyümesi iptal edildi */
    .category-image:hover {
        transform: none;
    }

    .content {
        flex: 1;
        padding-top: 80px;
    }
</style>
