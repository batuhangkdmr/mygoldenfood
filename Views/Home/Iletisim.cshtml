<style>
    /* Arka plan resmi */
    body {
        background: url('/images/arkapilan2.jpg') no-repeat center center fixed;
        background-size: cover;
    }

    /* Genel konteyner */
    .contact-container {
        display: flex;
        justify-content: center;
        align-items: center;
        height: 80vh;
    }

    /* Şeffaf kutu */
    .contact-box {
        display: flex;
        background: rgba(255, 255, 255, 0.2); /* Şeffaf beyaz */
        padding: 20px;
        border-radius: 10px;
        backdrop-filter: blur(10px); /* Arka planı bulanıklaştırır */
    }

    /* Form ve iletişim bilgileri */
    .contact-form, .contact-info {
        padding: 20px;
        border-radius: 10px;
        width: 100%;
    }

        /* Form alanı */
        .contact-form h3, .contact-info h3 {
            color: white;
            text-align: center;
        }

        .contact-form input, .contact-form textarea {
            width: 100%;
            padding: 10px;
            margin: 10px 0;
            border: none;
            border-radius: 5px;
        }

        /* Buton */
        .contact-form button {
            width: 100%;
            padding: 10px;
            background: black;
            color: white;
            border: none;
            cursor: pointer;
            border-radius: 5px;
            transition: 0.3s;
        }

            .contact-form button:hover {
                background: black;
            }

    /* İletişim bilgileri */
    .contact-info {
        background: rgba(0, 0, 0, 0.5); /* Şeffaf siyah */
        color: white;
    }

        .contact-info p {
            display: flex;
            align-items: center;
            font-size: 14px;
        }

        .contact-info i {
            margin-right: 10px;
        }

</style>

