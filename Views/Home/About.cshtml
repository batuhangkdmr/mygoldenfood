@using Microsoft.Extensions.Localization
@inject IStringLocalizer<SharedResource> localizer
@{
    ViewData["Title"] = "Hakkımızda | My Golden Food - Kaliteli Dondurulmuş Gıda";
    Layout = "_Layout";
}

<!-- SEO Meta Etiketleri -->
<head>
    <meta name="description" content="My Golden Food, dondurulmuş gıda sektöründe kaliteli ve lezzetli ürünler sunan öncü bir markadır. Lezzetli ve sağlıklı dondurulmuş gıdalarımız hakkında daha fazla bilgi edinin.">
    <meta name="keywords" content="dondurulmuş gıda, kaliteli gıda, lezzetli dondurulmuş ürünler, My Golden Food, sağlıklı dondurulmuş ürünler">
    <meta name="author" content="My Golden Food">
    <link rel="canonical" href="https://mygoldenfood.com/Home/About" />
</head>

<!-- Schema Markup (Google SEO için) -->
<script type="application/ld+json">
    {
        "@@context": "https://schema.org",
        "@@type": "Organization",
        "name": "My Golden Food",
        "url": "https://mygoldenfood.com",
        "logo": "https://res.cloudinary.com/dbhogeepn/image/upload/v1738688048/logo-moonlife1_ulf0n3.png",
        "description": "My Golden Food, dondurulmuş gıda sektöründe kaliteli ve lezzetli ürünler sunan bir markadır.",
        "address": {
            "@@type": "PostalAddress",
            "addressLocality": "Ankara, Türkiye"
        },
        "contactPoint": {
            "@@type": "ContactPoint",
            "telephone": "+90 533 635 24 58",
            "contactType": "customer service"
        }
    }
</script>

<section class="container-fluid p-0 position-relative">
    <!-- Harita Alanı -->
    <div class="w-100" style="margin-top: -150px; z-index: -1; position: relative;">
        <div class="map-container w-100">
            <iframe src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d138524.98741767602!2d32.66520231636404!3d39.89666169506215!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x14d347d520732db1%3A0xbdc57b0c0842b8d!2sAnkara!5e0!3m2!1str!2str!4v1734474761513!5m2!1str!2str"
                    width="100%" height="1200" style="border:0;" allowfullscreen=""
                    loading="lazy" referrerpolicy="no-referrer-when-downgrade"
                    title="My Golden Food Konumu - Ankara, Türkiye"
                    aria-label="My Golden Food'un harita üzerindeki konumu">
            </iframe>
        </div>
    </div>
</section>

<!-- Metin Alanı -->
<section class="container mt-5">
    <h1 class="text-center mb-4">@localizer["About_Biz Kimiz?"] | My Golden Food</h1> <!-- SEO için H1 etiketi -->
    <div class="row justify-content-center">
        <div class="col-md-8 text-center">
            <p>
                <strong>My Golden Food</strong>, @localizer["About_dondurulmuş gıda sektöründe **kaliteli ve lezzetli** ürünler sunan öncü bir markadır."]
                @localizer["About_Müşterilerimize en iyi hizmeti sağlamak için sürekli **yenilikçi çözümler** üretmekteyiz."]
            </p>
            <p>
                <strong>@localizer["About_Vizyonumuz"]</strong>, @localizer["About_dünya çapında lezzetimizi tanıtmak ve **sürdürülebilir üretim anlayışıyla** herkese sağlıklı ve lezzetli ürünler sunmaktır."]
            </p>
        </div>
    </div>
</section>
