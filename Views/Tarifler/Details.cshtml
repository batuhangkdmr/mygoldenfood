@{
    ViewData["Title"] = "Tarifler";
    Layout = "_Layout";
}

<div class="container mt-5">
    <h1 class="text-center text-white mb-4">Tarifler</h1>
    <div class="row">
        @foreach (var recipe in Model)
        {
            <div class="col-md-4 text-center mb-4">
                <div class="recipe-card" onclick="showModal('@recipe.Name', '@recipe.Content')">
                    <img src="@recipe.ImagePath" alt="@recipe.Name" class="img-fluid" />
                    <h3 class="mt-3 text-white">@recipe.Name</h3>
                </div>
            </div>
        }
    </div>
</div>

<!-- Modal -->
<div class="modal fade" id="detailsModal" tabindex="-1" aria-labelledby="detailsModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content" style="background: rgba(0, 0, 0, 0.8); color: white; border: none;">
            <div class="modal-header">
                <h5 class="modal-title" id="detailsModalLabel" style="color: #fff;"></h5>
                <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div style="border-bottom: 1px solid white; margin: 10px 0;"></div>
            <div class="modal-body">
                <h6 style="padding-bottom: 5px;">Tarif Detayı:</h6>
                <p id="detailsModalDescription" style="margin-top: 10px; line-height: 1.6;"></p>
            </div>
        </div>
    </div>
</div>

<style>
    /* Tarife özel kart tasarımı */
    .recipe-card {
        cursor: pointer;
        transition: transform 0.3s ease;
    }

        .recipe-card:hover {
            transform: scale(1.05);
        }

    /* Modal içerik düzeni */
    .modal-content {
        background: rgba(0, 0, 0, 0.8) !important;
        color: white !important;
        border-radius: 10px;
        box-shadow: 0 4px 10px rgba(0, 0, 0, 0.5);
    }

    .btn-close-white {
        background-color: white;
        border-radius: 50%;
    }

    .modal-body h6 {
        border-bottom: 1px solid white;
        padding-bottom: 5px;
    }
</style>

<script>
    function showModal(name, content) {
        document.getElementById('detailsModalLabel').textContent = name;
        document.getElementById('detailsModalDescription').textContent = content;

        var modal = new bootstrap.Modal(document.getElementById('detailsModal'));
        modal.show();
    }
</script>
