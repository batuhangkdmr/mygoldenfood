@model IEnumerable<MyGoldenFood.Models.Product>

@{
    ViewData["Title"] = "Ürünlerimiz";
}

<div class="container my-5">
    <h2 class="text-center mb-5 text-white">Ürünlerimiz</h2>
    <div class="product-grid">
        @foreach (var product in Model)
        {
            <div class="product-card">
                <div class="image-container" onclick="showModal('@product.Name', '@product.Description')">
                    <img src="@product.ImagePath" alt="@product.Name" class="product-image">
                </div>
                <div class="product-name-container">
                    <h5 class="product-name">@product.Name</h5>
                </div>
            </div>
        }
    </div>
</div>

<!-- Modal -->
<div class="modal fade" id="detailsModal" tabindex="-1" aria-labelledby="detailsModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content" style="background: rgba(0, 0, 0, 0.8); color: white; border: none;">
            <div class="modal-header">
                <h5 class="modal-title" id="detailsModalLabel" style="color: #fff;"></h5>
                <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <h6 style="padding-bottom: 5px;">Ürün Detayı:</h6>
                <p id="detailsModalDescription"></p>
            </div>
        </div>
    </div>
</div>

<style>
    .content {
        flex: 1; /* Sayfa içeriği alanını genişletir */
        padding-top: 5%;
    }

    /* Responsive Grid Düzeni */
    .product-grid {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(250px, 1fr)); /* Daha esnek düzen */
        gap: 20px;
    }

    /* Kart Tasarımı */
    .product-card {
        overflow: hidden;
        text-align: center;
        border-radius: 15px;
        background-color: rgba(0, 0, 0, 0); /* Tamamen şeffaf arka plan */
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.2);
        transition: transform 0.3s ease, box-shadow 0.3s ease;
    }

        .product-card:hover {
            transform: translateY(-10px); /* Hafif yükselme efekti */
            box-shadow: 0 8px 20px rgba(0, 0, 0, 0.3); /* Daha belirgin gölge */
        }

    .image-container {
        width: 100%;
        height: 250px; /* Sabit yükseklik */
        display: flex;
        justify-content: center;
        align-items: center;
        background-color: #000; /* Siyah arka plan */
        overflow: hidden; /* Taşan kısımları gizler */
        border-radius: 15px; /* Köşe yuvarlama */
    }

    .product-image {
        width: 100%;
        height: 100%;
        object-fit: cover; /* Resim çerçeveye sığacak şekilde kesilir */  /* Contain yada cover */
        object-position: center; /* Ortalar */
        transition: transform 0.3s ease; /* Hover efektine uyum sağlar */
    }

    .image-container:hover .product-image {
        transform: scale(1.1); /* Hover sırasında hafif büyüme efekti */
    }   

    /* Ürün Adı */
    .product-name-container {
        padding: 15px;
        background-color: rgba(0, 0, 0, 0); /* Şeffaf arka plan */
        border-radius: 0 0 15px 15px;
        color: #fff; /* Yazı rengi beyaz */
    }

    .product-name {
        margin: 0;
        font-size: 1.2rem;
        color: #fff;
    }
</style>

<script>
    function showModal(name, description) {
        document.getElementById('detailsModalLabel').textContent = name;
        document.getElementById('detailsModalDescription').textContent = description;
        var modal = new bootstrap.Modal(document.getElementById('detailsModal'));
        modal.show();
    }
</script>
