@{
    ViewData["Title"] = "Tarifler";
    Layout = "_Layout";
}

<div class="container mt-5">
    <h1 class="text-center text-white mb-4">Tarifler</h1>

    @if (!string.IsNullOrEmpty(ViewBag.Message))
    {
        <div class="alert alert-success text-center text-black" role="alert">
            @ViewBag.Message
        </div>
    }
    else
    {
        <div class="row">
            @foreach (var recipe in Model)
            {
                <div class="col-md-4 text-center mb-4">
                    <div class="recipe-card" onclick="showModal('@recipe.Name', '@recipe.Content')">
                        <div class="image-container">
                            <img src="@recipe.ImagePath" alt="@recipe.Name" class="recipe-image" />
                        </div>
                        <h3 class="mt-3 text-white">@recipe.Name</h3>
                    </div>
                </div>
            }
        </div>
    }
</div>

<!-- Modal -->
<div class="modal fade" id="detailsModal" tabindex="-1" aria-labelledby="detailsModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content" style="background: rgba(0, 0, 0, 0.8); color: white; border: none;">
            <div class="modal-header">
                <h5 class="modal-title" id="detailsModalLabel" style="color: #fff;"></h5>
                <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div style="border-bottom: 1px solid white; margin: 10px 0;"></div>
            <div class="modal-body">
                <h6 style="padding-bottom: 5px;">Tarif Detayı:</h6>
                <p id="detailsModalDescription" style="margin-top: 10px; line-height: 1.6;"></p>
            </div>
        </div>
    </div>
</div>

<style>
    /* Grid Layout */
    .recipe-grid {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(250px, 1fr)); /* Responsive */
        gap: 20px;
    }

    /* Kart Tasarımı */
    .recipe-card {
        overflow: hidden;
        text-align: center;
        border-radius: 15px;
        background-color: rgba(0, 0, 0, 0); /* Şeffaf arka plan */
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.2);
        transition: transform 0.3s ease, box-shadow 0.3s ease;
    }

        .recipe-card:hover {
            transform: translateY(-10px);
            box-shadow: 0 8px 20px rgba(0, 0, 0, 0.3);
        }

    /* Görsel Kapsayıcı */
    .image-container {
        width: 100%;
        height: 250px;
        display: flex;
        justify-content: center;
        align-items: center;
        background-color: #000;
        overflow: hidden;
        border-radius: 15px;
    }

    /* Görseller */
    .recipe-image {
        width: 100%;
        height: 100%;
        object-fit: cover;
        object-position: center;
        transition: transform 0.3s ease;
    }

    .image-container:hover .recipe-image {
        transform: scale(1.1);
    }

    /* Tarif Adı */
    .recipe-name-container {
        padding: 15px;
        background-color: rgba(0, 0, 0, 0);
        border-radius: 0 0 15px 15px;
        color: #fff;
    }

    .recipe-name {
        margin: 0;
        font-size: 1.2rem;
        color: #fff;
    }

    .content {
        flex: 1;
        padding-top: 5%;
    }
</style>

<script>
    function showModal(name, content) {
        document.getElementById('detailsModalLabel').textContent = name;
        document.getElementById('detailsModalDescription').textContent = content;

        var modal = new bootstrap.Modal(document.getElementById('detailsModal'));
        modal.show();
    }
</script>
