@model IEnumerable<MyGoldenFood.Models.Benefit>

@{
    ViewData["Title"] = "Ürünlerin Faydaları";
    Layout = "_Layout";
}

<div class="container my-5">
    <h2 class="text-center mb-5 text-white">Ürünlerin Faydaları</h2>
    <div class="benefit-grid">
        @foreach (var benefit in Model)
        {
            <div class="benefit-card" onclick="showModal('@benefit.Name', '@benefit.Content')">
                <div class="image-container">
                    <img src="@benefit.ImagePath" alt="@benefit.Name" class="benefit-image">
                </div>
                <div class="benefit-name-container">
                    <h5 class="benefit-name">@benefit.Name</h5>
                </div>
            </div>
        }
    </div>
</div>

<!-- Modal -->
<div class="modal fade" id="detailsModal" tabindex="-1" aria-labelledby="detailsModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="detailsModalLabel"></h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <h6>Fayda Detayı:</h6>
                <p id="detailsModalDescription"></p>
            </div>
        </div>
    </div>
</div>

<style>
  
    /* Grid Layout */
    .benefit-grid {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
        gap: 20px;
    }

    /* Card Style */
    .benefit-card {
        border-radius: 10px;
        overflow: hidden;
        cursor: pointer;
        transition: transform 0.3s ease, box-shadow 0.3s ease;
        text-align: center;
        background-color: transparent;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.2);
    }

        .benefit-card:hover {
            transform: scale(1.05);
            box-shadow: 0 8px 16px rgba(0, 0, 0, 0.3);
        }

    /* Image Styling */
    .image-container {
        width: 100%;
        height: 250px;
        display: flex;
        justify-content: center;
        align-items: center;
        background-color: #000;
        border-radius: 10px;
        overflow: hidden;
    }

    .benefit-image {
        width: 100%;
        height: 100%;
        object-fit: cover;
        transition: transform 0.3s ease;
    }

    .image-container:hover .benefit-image {
        transform: scale(1.1);
    }

    /* Benefit Name */
    .benefit-name-container {
        padding: 15px;
        background-color: transparent;
    }

    .benefit-name {
        margin: 0;
        font-size: 1.2rem;
        color: #fff;
    }

    /* Modal Styling */
    .modal-content {
        background: rgba(0, 0, 0, 0.8);
        color: white;
        border-radius: 10px;
        box-shadow: 0 4px 10px rgba(0, 0, 0, 0.5);
    }

    .content {
        flex: 1;
        padding-top: 5%;
    }
</style>

<script>
    function showModal(name, description) {
        document.getElementById('detailsModalLabel').textContent = name;
        document.getElementById('detailsModalDescription').textContent = description;
        var modal = new bootstrap.Modal(document.getElementById('detailsModal'));
        modal.show();
    }
</script>
