@{
    ViewData["Title"] = "Tarifler";
    Layout = "_Layout";
}

<div class="container mt-5">
    <h1 class="text-center text-white mb-4">Tarifler</h1>
    <div class="row">
        @foreach (var recipe in Model)
        {
            <div class="col-md-4 text-center mb-4">
                <img src="@recipe.ImagePath" alt="@recipe.Name" class="img-fluid" />
                <h3 class="mt-3 text-white">@recipe.Name</h3>
                <p class="text-white">@recipe.Content</p>
            </div>
        }
    </div>
</div>
